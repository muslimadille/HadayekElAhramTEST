<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlowWhiteTwo"
    tools:context=".AdvWithUsActivity">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_back"
            android:theme="@style/AppTheme.AppBarOverlay">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backyy"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/backyyy"/>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/li_buy"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titlee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="اعلن معنا"
                        android:gravity="center"
                        android:scaleX="2"
                        android:layout_marginRight="10dp"
                        android:textSize="18dp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>






            </LinearLayout>







        </com.google.android.material.appbar.AppBarLayout>





    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/background_border"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logopng" />


        </LinearLayout>






        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:text="حين يكون الاعلان أكثر من مجرد صوره على جروب أو صفحه عندما يصل الى فئات عملائك المستهدفين بأسرع طريقه فأنت أمام أسلوب جديدللأعلان أفكار مبتكره تحقق لك أفضل النتائج وتصل بأعلانك إلى أبعد ماتتوقع كن مستعدا ليصل أعلانك لاكثر من ١٠٠٠٠٠ من ساكنى حدائق الاهرام \n مواعيد العمل  :  من ١٢ ظهرا الي ٨ مساءا"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/google"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/call_menu"
                    />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="01018588855"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/googlee"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/google3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/home_menu"
                        />
                    <ImageView
                        android:id="@+id/google4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/google"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="٣٥٥ أ،شارع ١٥ أ ،البوابة الاولي"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/whatsapp"
                />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_marginLeft="100dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textyeeh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_above="@+id/fahmy"
                android:textColor="@color/colorPrimaryDark"
                android:text="حدائق الاهرام في جيبك"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/fahmy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:text="Offered By Mohamed Fahmy"/>

        </RelativeLayout>


    </LinearLayout>

    </LinearLayout>