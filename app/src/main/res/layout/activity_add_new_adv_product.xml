<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AddNewAdv.AddNewAdvProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_border_back"
                android:theme="@style/AppTheme.AppBarOverlay">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backyy"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/backyyy"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/li_buy"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/titlee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اضف صور الاعلان"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="@android:color/white"/>


                    </LinearLayout>






                </LinearLayout>







            </com.google.android.material.appbar.AppBarLayout>





        </androidx.coordinatorlayout.widget.CoordinatorLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:id="@+id/liner_profileimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorBlowWhite"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="عدل صور الاعلان"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner_profileimagee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlowWhite"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgProfile1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/addph"/>
                <ImageView
                    android:id="@+id/imgProfile2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/addph"/>
                <ImageView
                    android:id="@+id/imgProfile3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/addph"/>
                <ImageView
                    android:id="@+id/imgProfile4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/addph"/>
                <ImageView
                    android:id="@+id/imgProfile5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/addph"/>

            </LinearLayout>


            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/background_border_add"
                android:padding="10dp"
                android:text="تعديل الاعلان"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>



        </LinearLayout>
    </LinearLayout>
</ScrollView>